@charset "utf-8";

/* Horizontal Navigation Styles */

body > header > nav.horizontalNavigation li{
	width: 25%; 
}

nav.horizontalNavigation li {
	display: block;
	float: left;
}
nav.horizontalNavigation a {
	display: block;
	text-align: center;
	margin-top: 8px;
}
nav.horizontalNavigation a:hover{
	background: white;
	color: black;
}


/* Table Home Page */ 

table {
	background: #ffe6e6;
	border: 10px outset #ffcc99;
	font: 0.75em;
	font-family: verdana;
	padding: 20px;
	width: 100%
}
table.home th {
    font-weight: bold;
    font-size: 25px;
	text-align: center;
}

table.home td {
	orphans: 2;
	padding: 10px;
	text-align: left;
}
/* Photo Settings */ 

img {
	display: block;
	height: auto;
	max-width: 100%;
	margin-left: auto;
	margin-right: auto;
}

/* font */ 
h1{
	font-family: verdana;
}


p {
	font-family: verdana;
	font-size: 20px;
}

/* Column Set */ 

.columns {
	column-count: 2;
	column-gap: 3em;
	break-after: column;
}

p{
	margin-top: 0;
}

div.columns {
	
	column-width: 200px;
	column-rule: 2px solid gray;
	orphans: 10;
	break-before: auto;
}
div.footer {
	display: block;
	column-width: auto;
}

body > div.columns{
	background: #ffe6e6;
	border: 10px outset #ffcc99;
	font: 0.75em;
	height: auto;
	padding: 20px;
	width: auto;
}

/* Video sizing */ 

iframe {
	height: auto;
	width: 100%;
	column-span: all;
}


h1 {
	font-family: verdana;
}

/* Table for bs page */ 

table.best th {
	border: 1px solid;
	text-align: center;
}
table.best td {
	border: collapse;
}


