@charset "utf-8";

/* Horizontal Navigation Styles */

body > header > nav.horizontalNavigation li{
	width: 25%; 
}

nav.horizontalNavigation li {
	display: block;
	float: left;
}
nav.horizontalNavigation a {
	display: block;
	text-align: center;
	margin-top: 8px;
}
nav.horizontalNavigation a:hover{
	background: white;
	color: black;
}


/* Table Home Page */ 

table {
	background: #ffe6e6;
	border: 10px outset #ffcc99;
	font: 0.75em;
	font-family: verdana;
	padding: 20px;
	width: 100%
}
table.home th {
    font-weight: bold;
    font-size: 25px;
	text-align: center;
}

table.home td {
	orphans: 2;
	padding: 10px;
	text-align: left;
}
/* Photo Settings */ 

img {
	display: block;
	height: auto;
	max-width: 100%;
	margin-left: auto;
	margin-right: auto;
}

/* font */ 
h1{
	font-family: verdana;
}


p {
	font-family: verdana;
	font-size: 20px;
}

/* Column Set */ 

.columns {
	column-count: 2;
	column-gap: 3em;
	break-after: column;
}

p{
	margin-top: 0;
}

div.columns {
	
	column-width: 200px;
	column-rule: 2px solid gray;
	orphans: 10;
	break-before: auto;
}

body > div.columns{
	background: #ffe6e6;
	border: 10px outset #ffcc99;
	font: 0.75em;
	height: auto;
	padding: 20px;
	width: auto;
}

/* Video sizing */ 

iframe {
	height: auto;
	width: 100%;
	column-span: all;
}


h1 {
	font-family: verdana;
}

/* Table for bs page */ 

table.best th {
	border: 1px solid;
	text-align: center;
}
table.best td {
	border: #ffcc99;
}

table.footer {
	height:100px;
	width:100%;
}


/* Form Layout Styles */


form#survey {
	display: -webkit-flex;
	display: flex;
	-webkit-flex-flow: row wrap;
	flex-flow: row wrap;
}

form#survey > fieldset{
	background-color: #ffee6;
	border-radius: 20px;
	-webkit-flex: 1 1 300px;
	flex: 1 1 300px;
	font-size: 0.85em;
	padding: 10px;
	margin: 10px;
}

div.formRow{
	display: -webkit-flex;
	display: flex;
	-webkit-flex-flow: row wrap;
	flex-flow: row wrap;
	margin: 7px 0px;
}

div.formRow > *{
	-webkit-flex: 1 1 150px;
	flex: 1 1 150px;
}


/* Legend Styles */

legend {
	background-color: #ffcc99;
	color: black;
	padding: 5px;
}


/* Text Area Styles */

textarea{
	margin-top: 10px;
	height: 100px;
	width: 95%;
	
}


/* Spinner Styles */

div.formRow > input#dineSpin {
	-webkit-flex: 0 0 50px;
	flex: 0 0 50px;
	
}


/* Form Button Styles */

div#buttons {
	text-align: center;
	width: 100%;
}

input[type='submit'], input[type='reset'] {
	font-size: 1.2em;
	padding: 5px;
	margin: 15px;
}

