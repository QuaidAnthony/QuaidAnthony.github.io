@charset "utf-8";

/* Header Section */
header {
	width: auto; 
	padding: 0px; 
	background-color: #ffcc99; 
	clear: both; 
	height: 30px;
	vertical-align: top;
}
/* Body Section */
body {
	margin-left: auto; 
	margin-right: auto;
	max-width: 960px; 
	min-width: 640px; 
	width: 95%;
	background-color: #ffffcc;
}

/* Footer Section */
footer {
	text-align: center;
	width: auto; 
	padding: 5px; 
	background-color: #ffcc99; 
	clear: both; 
	height: 15px;
}





